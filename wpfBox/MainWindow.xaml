<Window x:Class="wpfBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="LayoutRoot" Width="500" Height="300">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"  />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Background="#FF8262EC" Text="What the heck I am doing this for ..." FontSize="24" FontWeight="Bold" Margin="0,5,0,10" />
        <StackPanel Grid.Row="1" CanVerticallyScroll="True" >
            <Button x:Name="Button_0" Content="Grid Window" Margin="2, 5" />
            <Button x:Name="Button_1" Content="Stack Window" Margin="2, 5" />
        </StackPanel>        
    </Grid>
</Window>
